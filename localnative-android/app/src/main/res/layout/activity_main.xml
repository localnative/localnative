<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.localnative.android.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <LinearLayout
            android:id="@+id/toolbar_pagination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/toolbar"
            app:layout_constraintTop_toBottomOf="@+id/notes_recycler_view">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/prev_button"
                style="@style/LNButton"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:text="@string/prev_button_text" />

            <TextView
                android:id="@+id/pagination_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="100dp"
                android:minHeight="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next_button"
                style="@style/LNButton"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:text="@string/next_button_text" />
        </LinearLayout>

        <fragment
            android:id="@+id/notes_recycler_view"
            android:layout_below="@+id/toolbar_pagination"
            android:layout_alignParentBottom="true"
            android:name="app.localnative.android.NoteListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_pagination"
            tools:layout="@layout/fragment_note_list" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
