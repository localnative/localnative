<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/qr_code_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="#1C1C1E"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".android.QRCodeActivity">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/datetimeTextView"
            android:textColor="@android:color/white"
            android:textSize="@dimen/qrcode_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="2022-08-08 18:00:00" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTextView"
            android:textSize="@dimen/qrcode_text_size"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/linkTextView"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/linkTextView"
            android:textColor="@android:color/white"
            android:textSize="@dimen/qrcode_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/qrCodeImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:autoLink="web"
            tools:text="https://www.google.com" />

        <ImageView
            android:id="@+id/qrCodeImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@mipmap/ic_launcher" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>