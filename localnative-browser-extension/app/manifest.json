{
  "name": "Local Native",
  "version": "0.1.4",
  "manifest_version": 2,
  "description": "Local Native notes taking.",
  "icons": {
    "512": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "nativeMessaging",
    "activeTab",
    "tabs"
  ],
  "applications": {
    "gecko": {
      "id": "localnative@example.org",
      "strict_min_version": "50.0"
    }
  }
}
