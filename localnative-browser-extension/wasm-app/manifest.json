{
  "name": "Local Native",
  "version": "0.7.0",
  "manifest_version": 3,
  "description": "Local Native notes taking.",
  "icons": {
    "512": "icon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "permissions": ["nativeMessaging", "scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["wasm-app.js", "wasm-app_bg.wasm", "init.js"]
    }
  ]
}
